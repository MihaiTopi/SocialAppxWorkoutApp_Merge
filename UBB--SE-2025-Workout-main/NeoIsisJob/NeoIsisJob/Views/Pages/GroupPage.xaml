<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DesktopProject.Pages.GroupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DesktopProject.Pages"
    xmlns:components="using:DesktopProject.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#f3f4f6">

    <Grid x:Name="RootGrid" Background="#f3f4f6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <components:TopBar Grid.Row="0" x:Name="TopBar"/>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="40,20,40,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="150"/>
                <ColumnDefinition Width="*" MinWidth="800"/>
                <ColumnDefinition Width="Auto" MinWidth="150"/>
            </Grid.ColumnDefinitions>

            <!-- Center Content (Group Details and Posts Feed) -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Group Details Card -->
                <Border Grid.Row="0" Background="#fff" Padding="30" CornerRadius="16" Margin="0,0,0,20" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <StackPanel Spacing="12">
                        <!-- Group Image (Assuming it's handled in code-behind to set Source) -->
                        <Image x:Name="GroupImage" Height="150" Stretch="UniformToFill" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        
                        <TextBlock x:Name="GroupTitle" FontSize="28" FontWeight="Bold" Foreground="#222" Text="[TITLE]" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock x:Name="GroupDescription" FontSize="16" Foreground="#444" Text="[DESCRIPTION]" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Posts Feed -->
                <!-- Assuming PostsFeed component is already styled -->
                <components:PostsFeed x:Name="PostsFeed" Grid.Row="1" Margin="0"/>
            </Grid>

            <!-- Members Panel Card (Left Column) -->
            <Border Grid.Column="0" Background="#fff" Padding="20" CornerRadius="16" Margin="0,0,20,0" VerticalAlignment="Stretch" HorizontalAlignment="Center" Width="300">
                <StackPanel Spacing="15">
                    <TextBlock Text="Members" FontSize="20" FontWeight="SemiBold" Foreground="#222" Margin="0,0,0,10"/>

                    <!-- Members List (Using ItemsControl) -->
                    <!-- You will need to bind your collection of members to the ItemsSource in the code-behind -->
                    <ItemsControl x:Name="MembersItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Template for each member item -->
                                <Border Background="#f9fafb" CornerRadius="8" Padding="10" Margin="0,0,0,8">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <!-- Member Image/Icon Placeholder -->
                                        <Ellipse Width="30" Height="30" Fill="#ddd"/>
                                        <!-- Bind to member name property -->
                                        <TextBlock Text="{Binding MemberName}" VerticalAlignment="Center" FontSize="16" Foreground="#222"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Removed MembersList StackPanel - Replaced by ItemsControl -->

                </StackPanel>
            </Border>

            <!-- Create and Edit Buttons (Right Column) -->
            <!-- Wrapped buttons in a StackPanel within a Border for consistent styling -->
            <Border Grid.Column="2" Background="#fff" Padding="20" CornerRadius="16" Margin="20,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="150">
                <StackPanel Orientation="Vertical" Spacing="15" HorizontalAlignment="Stretch">
                    <Button x:Name="CreatePostInGroupButton" Content="Create Post" Background="#2563eb" Foreground="White" CornerRadius="8" FontWeight="SemiBold" HorizontalAlignment="Stretch" Click="CreatePostInGroupButton_Click" Padding="10,12"/>
                    <!-- Add Edit Group Button if needed -->
                    <!-- <Button Content="Edit Group" Background="#f3f4f6" Foreground="#222" CornerRadius="8" FontWeight="SemiBold" HorizontalAlignment="Stretch" Click="EditGroupButton_Click" Padding="10,12"/> -->
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
