<UserControl
    x:Class="DesktopProject.Components.TopBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DesktopProject.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="60"
    d:DesignWidth="800">

    <Grid Background="#fff" Padding="20" MinHeight="40" BorderBrush="#e5e7eb" BorderThickness="0,0,0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="400"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="Logo" Grid.Column="0" Width="40" Height="40" CornerRadius="20" HorizontalAlignment="Left" Background="Transparent">
            <Image Source="../Assets/Logo.png" Stretch="UniformToFill"/>
        </Border>

        <Grid Grid.Column="1" Padding="100 0 100 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="GroupsButton" Content="Groups" FontSize="20" Foreground="#fff" Background="#2563eb" BorderThickness="0" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" Grid.Column="0" Padding="12,6" Margin="0,0,12,0" />
            <Button x:Name="SeeUsersButton" Content="See Users" FontSize="20" Foreground="#fff" Background="#2563eb" BorderThickness="0" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" Grid.Column="1" Padding="12,6" Margin="0,0,12,0" />
            <Button x:Name="CreatePostButton" Content="Create Post" FontSize="20" Foreground="#fff" Background="#2563eb" BorderThickness="0" CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" Grid.Column="2" Padding="12,6" Margin="0,0,12,0" />
        </Grid>
    </Grid>
</UserControl>
